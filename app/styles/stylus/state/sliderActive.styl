.slides--right
    opacity 0

    position absolute

    left: 50%
    top: 50%

    transform translateX(-50%) translateY(-50%) translateZ(500px) rotateY(90deg)

.slides--left
    opacity 0

    position absolute

    left: 50%
    top: 50%

    transform translateX(-50%) translateY(-50%) translateZ(500px) rotateY(-90deg)
