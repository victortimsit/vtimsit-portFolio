@import '../tools/breakpoints.styl'

html
    overflow hidden

body
    margin 0
    overflow hidden 

    background-color #f5f5f5
    font-family signikaRegular
    @media screen and (max-width: $medium-tablet)

        position absolute
        left 0
        top 0
        bottom 0 
        overflow-y scroll

h1
    margin 20px 30px 10px 30px

    font-family signikaBold
    font-size 34px
    @media screen and (max-width: $medium-desktop)
        font-size 27px
        margin-bottom 8px
    @media screen and (max-width: $large-phone)
        font-size 34px
        margin-bottom 10px

h2  
    margin 0px 30px 5px 30px

    font-family signikaBold
    font-size 18px
    color #4A90E2
    @media screen and (max-width: $medium-desktop)
        font-size 14px
        margin-bottom 4px
    @media screen and (max-width: $large-phone)
        font-size 18px
        margin-bottom 5px

h3
    position absolute
    margin 15px 20px

    font-family signikaBold
    font-size 22px
    color #4A90E2

    cursor pointer

ul
    margin 50vh 20px
    padding 0
    position absolute

    transform translateY(-50%)
    @media screen and (max-width: $medium-tablet)
        display none
    
li 
    margin-bottom 10px

    font-family signikaBold
    font-size 22px

    list-style none
    cursor pointer
    user-select: none
    @media screen and (max-width: $medium-desktop)
        font-size 18px
        margin-bottom 8px

p
    margin 0px 30px 15px 30px

    font-size 16px
    @media screen and (max-width: $medium-desktop)
        font-size 13px
        margin-bottom 12px
    @media screen and (max-width: $large-phone)
        font-size 16px
        margin-bottom 15px

a
    color #4A90E2

    text-decoration none
    transition opacity 150ms ease, transform 150ms ease
    &:hover
        transform scale(1.1)
        opacity 0.8
    &:active
        transform scale(0.9)
        opacity 1
    @media screen and (max-width: $large-phone)
        font-size 18px
        
canvas
    @media screen and (max-width: $medium-tablet)
        position fixed
        bottom 0px
        right 0px
        z-index -1

::selection
    background-color #FA709A
    color black
    