@import '../tools/breakpoints.styl'

.container
  width 920px
  height 540px
  margin 0 auto
  position absolute
  
  top 50%
  left 50%

  transform translateX(-50%) translateY(-50%)
  z-index 8
  @media screen and (max-width: $medium-desktop)
    width 740px
    height 432px
  @media screen and (max-width: $large-tablet)
    width 432px
    height 740px
  @media screen and (max-width: $medium-tablet)
    position initial
    transform translateX(0%) translateY(0%)
  @media screen and (max-width: $large-phone)
    width 300px
    height 550px
  
.perspective
  perspective 800px

.cubeSlider
  // top 50%
  // left 50%
  // position absolute
  float left

  transform-style preserve-3d

.cubeSlider_1
  width 540px
  height 540px
  margin-right 10px
  margin-bottom 20px

  transition transform 150ms ease
  cursor pointer
  &:hover
    transform scale(1.025)
  &:active
    transform scale(0.975)

  @media screen and (max-width: $medium-desktop)
    width 432px
    height 432px
  @media screen and (max-width: $large-phone)
    display none
  
.cubeSlider_2
  width 360px
  height 360px
  margin-left 10px
  margin-bottom 20px
  @media screen and (max-width: $medium-desktop)
    width 288px
    height 288px
  @media screen and (max-width: $large-tablet)
    margin-left 0px
  @media screen and (max-width: $large-phone)
    width 300px
    height 400px

.cubeSlider_3
  width 160px
  height 160px
  margin-left 10px
  @media screen and (max-width: $medium-desktop)
    width 124px
    height 124px
  @media screen and (max-width: $large-tablet)
    margin-left 20px
  @media screen and (max-width: $large-phone)
    width 140px
    height 140px
    margin-left 0px
    margin-bottom 100px
    float right