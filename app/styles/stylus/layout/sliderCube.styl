@import '../tools/breakpoints.styl'

.container
  width 920px
  height 540px
  margin: 0 auto
  position: absolute
  
  top 50%
  left 50%

  transform translateX(-50%) translateY(-50%)
  z-index 8
  @media screen and (max-width: $medium-desktop)
    width 740px
    height 432px
  
.perspective
  perspective 800px

.cubeSlider
  // top 50%
  // left 50%
  // position absolute
  float left

  transform-style preserve-3d

.cubeSlider_1
  width 540px
  height 540px
  margin-right 10px
  margin-bottom 20px
  @media screen and (max-width: $medium-desktop)
    width 432px
    height 432px
  
.cubeSlider_2
  width 360px
  height 360px
  margin-left 10px
  margin-bottom 20px
  @media screen and (max-width: $medium-desktop)
    width 288px
    height 288px

.cubeSlider_3
  width 160px
  height 160px
  margin-left 10px
  @media screen and (max-width: $medium-desktop)
    width 124px
    height 124px
