@import '../tools/breakpoints.styl'

.discoverProject
    width 100vw
    height 100vh
    position absolute
    background-image url('../../../assets/images/projects/projectMk2/blurBackground.jpg')
    background-size cover

    left 50%
    top 50%

    transform translateX(-50%) translateY(-50%)

    z-index 20
    overflow-y scroll
    opacity 0
    visibility hidden
    transition opacity 300ms ease, visibility 300ms ease
    will-change opacity, visibility

.discoverProject:target
    opacity 1
    visibility visible

.presentationBlock
    width 920px
    // height 2040px // 540
    margin: 0 auto
    margin-bottom 80px
    position: absolute

    left 52%
    top 13%

    background-color #FAFAFA

    border-radius 20px

    box-shadow 0px 2px 4px 0px rgba(0, 0, 0, 0.14), 0px 3px 4px 0px rgba(0, 0, 0, 0.12), 0px 1px 5px 0px rgba(0, 0, 0, 0.20)

    overflow hidden
    transform-origin top right 
    // transform translateX(-50%) translateY(-0%) scale(0)
    transform translateX(-50%) translateY(50%)
    z-index 8
    // transition transform 300ms ease
    transition transform 300ms ease
    will-change transform
    @media screen and (max-width: $medium-desktop)
      width 740px
    //   height 432px
    @media screen and (max-width: $large-tablet)
      width 432px
    //   height 740px
